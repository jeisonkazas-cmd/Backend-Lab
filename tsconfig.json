{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
